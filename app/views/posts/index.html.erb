<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to '新規投稿', new_post_path %>
<% if user_signed_in? %>
  <%= link_to 'ユーザーページ',  user_path(current_user) %>
  <%= link_to 'ログアウト',  destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to '新規登録', new_user_registration_path %>
  <%= link_to 'ログイン', new_user_session_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>投稿一覧</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>ユーザーid:<%= post.user_id %></td>
        <td>No:<%= post.id %></td>
        <td><%= post.title %></td>
        <td>投稿日:<%= post.created_at %></td>
        <td><%= link_to '質問一覧へ', nodes_path(post_id: post.id) %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: '削除すると復元できません!本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
