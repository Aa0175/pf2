<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Answer</th>
      <th>質問</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.answer_id %></td>
        <td><%= question.content %></td>
        <td><%= link_to '選択肢', answers_path(question_id: question.id) %></td>
        <td><%= link_to '編集', edit_question_path(question) %></td>
        <td><%= link_to '削除', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '質問を追加する', new_question_path %>|
